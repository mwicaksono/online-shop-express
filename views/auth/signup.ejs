<%- include('../partials/head.ejs', { title: 'Sign Up Page' }) %>
    </head>

    <body>
        <main>
            <form action="/signup" method="POST">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" placeholder="enter email here" name="email">
                </div>
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="name" placeholder="enter your name" name="name">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" name="password">
                </div>
                <div class="form-group">
                    <label for="address">Address</label>
                    <input type="text" placeholder="Your Address" name="address">
                </div>
                <button type="submit">Submit Now</button>
            </form>
        </main>
    </body>

    </html>