<%- include('../../shared/partials/head', { title: 'Sign Up Page' }) %>
    <link rel="stylesheet" href="/styles/forms.css">
    <link rel="stylesheet" href="/styles/auth.css">
    </head>

    <body>
        <%- include('../../shared/partials/header') %>
            <main>

                <h1>Create New Account</h1>
                <% if(sessionData.message) { %>
                    <section class="alert">
                        <h2>Invalid Input</h2>
                        <p>
                            <%= sessionData.message %>
                        </p>
                    </section>
                    <% } %>
                        <form action="/signup" method="POST">
                            <input type="hidden" value="<%= locals.csrfToken %>" name="_csrf">
                            <p>
                                <label for="email">Email</label>
                                <input type="email" placeholder="enter email here" name="email" id="email"
                                    value="<%= sessionData.email %>" required>
                            </p>
                            <p>
                                <label for="confirm-email">Confirm Email</label>
                                <input type="email" placeholder="enter email here" name="confirm-email"
                                    id="confirm-email" value="<%= sessionData.confirmEmail %>" required>
                            </p>
                            <p>
                                <label for="password">Password</label>
                                <input type="password" name="password" id="password" minlength="6" required>
                            </p>
                            <hr>
                            <p>
                                <label for="full-name">Full Name</label>
                                <input type="text" placeholder="enter your name" name="full-name" id="full-name"
                                    value="<%= sessionData.fullName %>" required>
                            </p>
                            <p>
                                <label for="street">Street</label>
                                <input type="text" placeholder="Street" name="street" id="street"
                                    value="<%= sessionData.street %>" required>
                            </p>
                            <p>
                                <label for="postal-code">Postal Code</label>
                                <input type="text" placeholder="Postal Code" name="postal-code" id="postal-code"
                                    minlength="5" maxlength="5" value="<%= sessionData.postal %>" required>
                            </p>
                            <p>
                                <label for="city">City</label>
                                <input type="text" placeholder="City" name="city" id="city"
                                    value="<%= sessionData.city %>" required>
                            </p>
                            <button class="btn" type="submit">Create Account</button>
                            <p id="switch-form"><a href="/login">Login Instead</a></p>
                        </form>
            </main>
            <%- include('../../shared/partials/footer') %>
    </body>

    </html>